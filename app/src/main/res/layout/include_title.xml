<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#0000ff"
 >

    <TextView
        android:id="@id/title_layout_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="职位"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@id/title_layout_left_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:background="@color/gray"
        >

        <TextView
            android:id="@id/title_layout_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="AA"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@id/title_layout_left_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@android:drawable/ic_delete"
            android:layout_marginLeft="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@id/title_layout_right_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:background="@color/gray"
        >

        <TextView
            android:id="@id/title_layout_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            tools:text="BB"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@id/title_layout_right_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@android:drawable/ic_delete"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
</RelativeLayout>